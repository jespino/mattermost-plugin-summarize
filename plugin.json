{
    "id": "summarize",
    "name": "Summarize Plugin",
    "description": "",
    "homepage_url": "https://github.com/mattermost/mattermost-plugin-starter-template",
    "support_url": "https://github.com/mattermost/mattermost-plugin-starter-template/issues",
    "release_notes_url": "https://github.com/mattermost/mattermost-plugin-starter-template/releases/tag/v0.1.0",
    "icon_path": "assets/starter-template-icon.svg",
    "version": "0.1.0",
    "min_server_version": "6.2.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
            {
                "key": "OpenAIAPIKey",
                "type": "text",
                "display_name": "OpenAI API Key:"
            },
            {
                "key": "MattermostAIUrl",
                "type": "text",
                "display_name": "MattermostAI API url:"
            },
            {
                "key": "MattermostAISecret",
                "type": "text",
                "display_name": "MattermostAI API secret:"
            },
            {
                "key": "SergeUrl",
                "type": "text",
                "display_name": "Serge API url:"
            },
            {
                "key": "SergeModel",
                "type": "dropdown",
                "display_name": "Serge Model:",
                "options": [
                    {"display_name": "Alpaca-7B", "value": "Alpaca-7B"},
                    {"display_name": "Alpaca-7B-native", "value": "Alpaca-7B-native"},
                    {"display_name": "Alpaca-13B", "value": "Alpaca-13B"},
                    {"display_name": "Alpaca-30B", "value": "Alpaca-30B"},
                    {"display_name": "GTP4All", "value": "GPT4All"},
                    {"display_name": "OAsst-LLaMA-13B", "value": "OAsst-LLaMA-13B"},
                    {"display_name": "OAsst-LLaMA-30B", "value": "OAsst-LLaMA-30B"},
                    {"display_name": "Vicuna-7B", "value": "Vicuna-7B"},
                    {"display_name": "Vicuna-13B", "value": "Vicuna-13B"}
                ],
                "default": "GPT4All"
            },
            {
                "key": "Summarizer",
                "type": "dropdown",
                "display_name": "AI to summarize conversations",
                "options": [
                    {"display_name": "None", "value": ""},
                    {"display_name": "Open AI", "value": "openai"},
                    {"display_name": "Mattermost AI", "value": "mattermostai"},
                    {"display_name": "Serge", "value": "serge"}
                ],
                "default": "openai"
            },
            {
                "key": "ThreadAnswerer",
                "type": "dropdown",
                "display_name": "AI to answer questions about threads",
                "options": [
                    {"display_name": "None", "value": ""},
                    {"display_name": "Open AI", "value": "openai"},
                    {"display_name": "Mattermost AI", "value": "mattermostai"},
                    {"display_name": "Serge", "value": "serge"}
                ],
                "default": "openai"
            },
            {
                "key": "GenericAnswerer",
                "type": "dropdown",
                "display_name": "AI to answer questions",
                "options": [
                    {"display_name": "None", "value": ""},
                    {"display_name": "Open AI", "value": "openai"},
                    {"display_name": "Mattermost AI", "value": "mattermostai"},
                    {"display_name": "Serge", "value": "serge"}
                ],
                "default": "openai"
            },
            {
                "key": "EmojiSelector",
                "type": "dropdown",
                "display_name": "AI to select emojis",
                "options": [
                    {"display_name": "None", "value": ""},
                    {"display_name": "Open AI", "value": "openai"},
                    {"display_name": "Mattermost AI", "value": "mattermostai"},
                    {"display_name": "Serge", "value": "serge"}
                ],
                "default": "openai"
            },
            {
                "key": "ImageGenerator",
                "type": "dropdown",
                "display_name": "AI to generate images",
                "options": [
                    {"display_name": "None", "value": ""},
                    {"display_name": "Open AI", "value": "openai"},
                    {"display_name": "Mattermost AI", "value": "mattermostai"}
                ],
                "default": "openai"
            },
            {
                "key": "EnableUseRestrictions",
                "type": "bool",
                "display_name": "Enable Use Restrictions:",
				"help_text": "Global flag for all below settings."
            },
            {
                "key": "AllowPrivateChannels",
                "type": "bool",
                "display_name": "Allow Private Channels:"
            },
            {
                "key": "AllowedTeamIDs",
                "type": "text",
                "display_name": "Allowed Team IDs (csv):"
            },
            {
                "key": "OnlyUsersOnTeam",
                "type": "text",
                "display_name": "Only Users on Team: ",
				"help_text": "Only users on this team will be allowed to use the plugin"
            }
        ]
    }
}
